<Page x:Class="Musicnotes.WinUniversal.ViewerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Musicnotes.WinUniversal"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Frame
            x:Name="ShellFrame">
        </Frame>
        <Button Grid.Row="1" x:Name="PaymentButton" Content="Next" Margin="20" HorizontalAlignment="Center" MinWidth="120" Background="Pink"/>
    </Grid>

</Page>
